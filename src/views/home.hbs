<div class="row">
  {{#each device}}
    <div class="col-sm-6 col-lg-4 mt-4">
      <div class="card mr-4" style="width: 18rem;">
       <a href="/device/{{this.slug}}"> <img class="card-img-top" src="{{this.image}}" alt="Card image cap" /></a>
        <div class="card-body">
          <a href="/device/{{this.slug}}"><h5 class="card-title">{{this.name}}</h5></a>
          <p class="card-text">{{this.description}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>