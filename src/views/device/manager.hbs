<form class="mt-4" name="container-form" method="POST" action="/courses/handle-form-actions"></form>
<div class="d-flex">
    {{>sidebar}}
    <div class="container">
        <table class="table ">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên sản phẩm</th>
                    <th scope="col">Loại</th>
                    <th scope="col">Mô tả</th>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                {{#each device}}
                <tr>
                    <th scope="row">{{sum @index 1}} </th>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.infoProduct}}</td>
                    <td><a href="/device/{{this._id}}/edit"><button class="btn btn-outline-primary">Sửa</button></a>
                    </td>
                    <td><a href="" class="btn btn-outline-danger" data-id="{{this._id}}" data-toggle="modal"
                            data-target="#delete-course-modal">Xóa</a>
                    </td>
                    </td>
                </tr>
                {{else}}
          <tr>
        <td colspan="5" class="text-center">
         Bạn chưa đăng sản phẩm nào . <a href="/device/create">Đăng sản phẩm mới !</a>
        </td>
          </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
</form>
</form>

{{! confirm delete course }}
<div id="delete-course-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa khóa học ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn chắc chắn muốn xóa khóa học này ?</p>
            </div>
            <div class="modal-footer">
                <button id="btn-delete-course" type="button" class="btn btn-danger">Xóa bỏ</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>