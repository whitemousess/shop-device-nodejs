<div class="mt-4 text-center"><h1>Thêm thiết bị</h1></div>

<form method="post" enctype="multipart/form-data">
  <div class="form-group container">
    <label class="mt-4">Example file input</label>
    <input type="file" name="image" class="form-control" />
    <label class="mt-4">Tên thiết bị</label>
    <input
      type="text"
      name="name"
      class="form-control"
      placeholder="Tên thiết bị ..."
    />
    <label class="mt-4">Mô tả thiết bị</label>
    <input
      type="text"
      name="description"
      class="form-control"
      placeholder="Mô tả thiết bị ..."
    />
    <label class="mt-4">Thông tin sản phẩm</label>
    <input
      type="text"
      name="infoProduct"
      class="form-control"
      placeholder="Thông tin sản phẩm ..."
    />
    <label class="mt-4">Loại thiết bị</label>
    <input
      type="text"
      name="type"
      class="form-control"
      placeholder="Loại thiết bị ..."
    />
  <button type="submit" class="btn btn-primary mt-4">Submit</button>
  </div>
</form>
