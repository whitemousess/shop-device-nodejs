<div class="d-flex">
    {{>sidebar}}
    <div class="container">
        <table class="table ">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên sản phẩm</th>
                    <th scope="col">Loại</th>
                    <th scope="col">Mô tả</th>
                    <th colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                {{#each device}}
                <tr>
                    <th scope="row">{{sum @index 1}} </th>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.infoProduct}}</td>
                    <td>
                        <button class="btn btn-outline-primary btn-restore" data-id="{{this._id}}">Khôi phục</button>
                    </td>
                    <td><a href="" class="btn btn-outline-danger" data-id="{{this._id}}" data-toggle="modal"
                            data-target="#delete-device-modal">Xóa vĩnh viễn</a>
                    </td>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="5" class="text-center">
                        Thùng rác trống !
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{! confirm delete device }}
<div id="delete-device-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa vĩnh viễn sản phẩm ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Hành động này không thể khôi phục lại . Bạn vẫn muốn xóa ?</p>
            </div>
            <div class="modal-footer">
                <button id="btn-delete-device" type="button" class="btn btn-danger">Xóa bỏ</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<form name="delete-device-form" method="POST"></form>
<form name="restore-device-form" method="POST"></form>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var deviceId;
        var deleteForm = document.forms["delete-device-form"];
        var containerForm = document.forms["container-form"];
        var restoreForm = document.forms["restore-device-form"];
        var btnDeleteDevice = document.getElementById("btn-delete-device");
        var restoreBtn = $(".btn-restore");

        //handle open modal when click 
        $('#delete-device-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            deviceId = button.data('id')
        })

        // handle click force delete device
        btnDeleteDevice.onclick = function () {
            deleteForm.action = "/device/" + deviceId + '/delete/force?_method=DELETE'
            deleteForm.submit();
        }

        // handle click restore device
        restoreBtn.click(function (e) {
            e.preventDefault();
            var deviceId = $(this).data("id")
            restoreForm.action = "/device/" + deviceId + '/restore?_method=PATCH'
            restoreForm.submit();
        })
    })
</script>